
<h2>レビュー投稿</h2>


	<div class="form">
		<%= form_for @place do |f| %>
		<div class="form-group row">
			<div class="col-sm-2">
				<%= f.label :name, "場所の名前", class: "col-form-label" %>
			</div>
			<div class="col-sm-5">
				<%= f.text_field :name, autofocus: true, class: "form-control" %>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-2">
				<label>ジャンル</label>
			</div>
			<div class="form-check">
				<%= f.radio_button :genre, "遊び" %>
				<%= f.label :genre, "遊び", value:"遊び", class: "form-check-label" %>
			</div>
			<div class="form-check">
				<%= f.radio_button :genre, "食事" %>
				<%= f.label :genre, "食事", value: "食事", class: "form-check-label" %>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-2">
				<%= f.label :prefecture, "都道府県" %>
			</div>
			<div class="col-sm-3">
				<%= f.select :prefecture, Place.prefectures.keys,{prompt:"選択してください"}, class: "custom-select" %>
			</div>
		</div>

		<% end %>
	</div>
