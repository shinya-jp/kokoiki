<div class="col-sm-3">
	<div class="position-fixed">
		<h2>Profile</h2>

		<%= attachment_image_tag user, :profile_image, :fill,100, 100, format: 'jpeg',fallback: "no_image.jpg" %>

		<table>
				<tr>
					<th>ニックネーム</th>
					<td><%= user.nickname %></td>
				</tr>
				<tr>
					<th>フォロー</th>
					<td><%= link_to user.following.count, following_user_path %></td>
				</tr>
				<tr>
					<th>フォロワー</th>
					<td><%= link_to user.followers.count, followers_user_path %></td>
				</tr>
				<tr>
					<th><div class="btn btn-primary">行きたいリスト</div></th>
				</tr>

		</table>

		<% if current_user == user %>
			<div class="profile_edit-link">
				<%= link_to "プロフィール編集", edit_user_path(current_user.id),class: "btn btn-success" %>
			</div>
		<% else %>
			<%= render 'follow', user: @user %>
		<% end %>

		<%= link_to "レビューを投稿する", new_place_path, class: "btn btn-danger" %>
	</div>
</div>