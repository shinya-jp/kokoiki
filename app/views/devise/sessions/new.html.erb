<div class="offset-sm-3">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form">
      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.label :email, "メール" %>
        </div>
        <div class="col-sm-5">
          <%= f.email_field :email, :placeholder=>"例）kokoiki@example.com" , autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2">
         <%= f.label :password, "パスワード" %>
        </div>
        <div class="col-sm-5">
          <%= f.password_field :password, :placeholder=>"半角英数字6文字以上", autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <div class="login-link">
    <p>まだ会員ではない方はこちらから<%= link_to "新規会員登録", new_user_registration_path %></p>
  </div>
</div>
