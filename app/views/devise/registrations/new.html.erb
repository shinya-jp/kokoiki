<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname, "ニックネーム" %>
    <%= f.text_field :nickname, autofocus: true%>
  </div>

  <div class="field">
    <label>性別</label>
    <%= f.radio_button :gender, "男性" %>
    <%= f.label :gender, "男性" %>
    <%= f.radio_button :gender, "女性" %>
    <%= f.label :gender, "女性" %>
  </div>

  <div class="field">
    <%= f.label :birthday, "生年月日" %>
    <%= f.date_select :birthday, use_month_numbers: true, start_year:1930, end_year:(Time.now.year-10), default: Date.new(1990, 1, 1) %>
  </div>

  <div class="field">
    <%= f.label :address, "お住まい" %>
    <%= f.select :address, User.addresses.keys,{prompt: "選択してくだい"} %>
  </div>

  <div class="field">
    <%= f.label :email, "メール" %>
    <%= f.email_field :email,autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, :placeholder=>"半角英数字6文字以上", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認）" %>
    <%= f.password_field :password_confirmation, :placeholder=>"半角英数字6文字以上", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
